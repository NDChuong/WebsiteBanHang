<div class="span10">
    <h3> GIỎ HÀNG</h3>
    <hr class="soft" />
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Sản phẩm</th>
                <th>Mô tả</th>
                <th>Số lượng</th>
                <th>Giá</th>
            </tr>
        </thead>
        <tbody>
            {{#each product}}
            <tr>
                <td>
                    <img width="60" src="themes/images/products/{{ProID}}.jpg" alt="" />
                </td>
                <td>{{ProName}}
                    <br/>Xuất Sứ: Nhật Bản</td>
                <td>
                    <div class="input-append">
                        <input class="span1" style="max-width:34px" placeholder="1" id="appendedInputButtons" size="16" type="text">
                        <button class="btn" type="button">
                            <i class="icon-minus"></i>
                        </button>
                        <button class="btn" type="button">
                            <i class="icon-plus"></i>
                        </button>
                        <button class="btn btn-danger" type="button">
                            <i class="icon-remove icon-white"></i>
                        </button>
                    </div>
                </td>
                <td>{{Price}} VND</td>
            </tr>
            {{/each}}
            <tr>
                <td colspan="6" style="text-align:right">
                    <strong>Tổng giá =</strong>
                </td>
                <td>
                    <strong> {{TotalPrice}} </strong>
                </td>
            </tr>
        </tbody>
    </table>
    <table class="table table-bordered">
    </table>
    <a href="/" class="btn btn-large">
        <i class="icon-arrow-left"></i> Xem Thêm </a>
    <a href="pay.html" class="btn btn-large pull-right">Next
        <i class="icon-arrow-right"></i>
    </a>
</div>