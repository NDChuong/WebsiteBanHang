{{#with product}}
<div class="span10">
    <ul class="breadcrumb">
        <h3>Thông tin chi tiết sản phẩm</h3>
    </ul>
    <div class="row">
        <div id="gallery" class="span4">
            <a href="/themes/images/data/{{ProID}}.jpg" title="{{ProName}}">
				<img src="/themes/images/data/{{ProID}}.jpg" style="width:100%" alt="{{ProName}}" />
			</a>
            <div id="differentview" class="moreOptopm carousel slide">
                <div class="carousel-inner">
                    <div class="item active">
                        <a href="themes/images/data/{{ProID}}.jpg">
							<img style="width:29%" src="themes/images/data/{{ProID}}.jpg" alt="" />
						</a>
						<a href="themes/images/data/{{ProID}}.jpg">
							<img style="width:29%" src="themes/images/data/{{ProID}}.jpg" alt="" />
						</a>
						<a href="themes/images/data/{{ProID}}.jpg">
							<img style="width:29%" src="themes/images/data/{{ProID}}.jpg" alt="" />
						</a>
                    </div>
                    <div class="item">
                        <a href="themes/images/data/{{ProID}}.jpg">
							<img style="width:29%" src="themes/images/data/{{ProID}}.jpg" alt="" />
						</a>
						<a href="themes/images/data/{{ProID}}.jpg">
							<img style="width:29%" src="themes/images/data/{{ProID}}.jpg" alt="" />
						</a>
						<a href="themes/images/data/{{ProID}}.jpg">
							<img style="width:29%" src="themes/images/data/{{ProID}}.jpg" alt="" />
						</a>
                    </div>
                </div>
            </div>
            <div class="btn-toolbar"></div>
            
            
        </div>
		<div class="span6">
                <h3>{{ProName}}</h3>
                <hr class="soft" />
                <form action="/cart/add" class="form-horizontal qtyFrm" method="POST">
                    <div class="control-group">
						<label class="control-label">
							<span>{{Price}} VND</span>
						</label>
						<div class="controls">
							<input name="proId" type="hidden" value="{{ProID}}">
							<input id="txtQ" name="quantity" type="text" class="form-control span1" placeholder="Slg" value="1">
							<button type="submit" class="btn btn-large btn-primary pull-right"> Thêm vào giỏ hàng
								<i class=" icon-shopping-cart"></i>
							</button>
						</div>
					</div>
                </form>

                <hr class="soft" />
				<h4>Còn {{Quantity}} sản phẩm</h4>
				<h4>Số lượt xem: {{Clicks}}</h4>
				<h4>Số lượt bán: {{Sell}}</h4>
                <hr class="soft clr" />
                <p>
                    {{TinyDes}}
                </p>
				<br class="clr" />
				<hr class="soft" />                
            </div>
			<div class="span10">
                <ul id="productDetail" class="nav nav-tabs">
					<li class="active">
						<a href="#home" data-toggle="tab">Thông tin</a>
					</li>
				</ul>
                <div id="myTabContent" class="tab-content">
                    <div class="tab-pane fade active in" id="home">
                        <h4>Thông tin sản phẩm</h4>
                        <table class="table table-bordered">
                            <tbody>
                                <tr class="techSpecRow">
									<th colspan="2">Thông tin chi tiết</th>
								</tr>
								<tr class="techSpecRow">
									<td class="techSpecTD1">Hãng: </td>
									<td class="techSpecTD2">{{BraID}}</td>
								</tr>
								<tr class="techSpecRow">
									<td class="techSpecTD1">Loại:</td>
									<td class="techSpecTD2">{{CatID}}</td>
								</tr>
								<tr class="techSpecRow">
									<td class="techSpecTD1">Mô tả:</td>
									<td class="techSpecTD2">{{TinyDes}}</td>
								</tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
    </div>
</div>
{{/with}}
<div class="span10">
    <h4>Các sản phẩm cùng loại</h4>
    <ul class="thumbnails">
        {{#each product_new}}
        <li class="span2">
            <div class="thumbnail">
                <a href="/product/detail/{{ProID}}"><img src="themes/images/data/{{ProID}}.jpg" alt=""/></a>
                <div class="caption">
                    <h5>{{ProName}}</h5>
                    <p>{{Price}}</p>
                    <h4 style="text-align:center"><a class="btn" href="/product/detail/{{ProID}}"> <i class="icon-zoom-in"></i></a> <a class="btn" href="#">Thêm <i class="icon-shopping-cart"></i></a></h4>
                </div>
            </div>
        </li>
        {{/each}}
    </ul>   
    <h4>Các sản phẩm cùng hãng</h4>
    <ul class="thumbnails">
        {{#each product_bestsell}}
        <li class="span2">
            <div class="thumbnail">
                <a href="/product/detail/{{ProID}}"><img src="themes/images/data/{{ProID}}.jpg" alt=""/></a>
                <div class="caption">
                    <h5>{{ProName}}</h5>
                    <p>{{Price}}</p>
                    <h4 style="text-align:center"><a class="btn" href="/product/detail/{{ProID}}"> <i class="icon-zoom-in"></i></a> <a class="btn" href="#">Thêm <i class="icon-shopping-cart"></i></a></h4>
                </div>
            </div>
        </li>
        {{/each}}
    </ul>
</div>
